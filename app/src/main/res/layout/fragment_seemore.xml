<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/textview_underline"
        android:paddingBottom="20dp"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_user_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="top"
            android:layout_marginLeft="15dp"
            android:layout_marginEnd="10dp"
            android:src="@drawable/ic_person_grey"
            app:civ_border_color="#FFFFFF"
            app:civ_border_width="3dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_seemore_user_name"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:text="text"
                android:textSize="20dp"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/tv_seemore_user_email"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:text="text"
                android:textSize="16dp"
                android:textStyle="normal"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_seemore_modify_userinfo"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/radius_blue_btn"
                    android:text="계정설정"
                    android:textColor="#5588ff"
                    android:textSize="14dp" />

                <Button
                    android:id="@+id/btn_seemore_logout"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:background="@drawable/radius_grey_btn"
                    android:text="로그아웃"
                    android:textColor="#aaaaaa"
                    android:textSize="14dp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_seemore_my_reviews"
        android:text="내가 작성한 리뷰"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="타투이스트 메뉴"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_seemore_apply_tattooist"
        android:text="타투이스트 등록"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_seemore_tattooist_posts"
        android:text="게시글 관리"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>